#! /bin/bash

pkgname="pacman-auto-update"
install="recipes.sh"

pkgdesc="Keeps packages from compiled repositories updated hourly"
url="https://github.com/cmuench/pacman-auto-update"
license=("GPL2")

# set pkgver with: date +%s
pkgver=1685553040
pkgrel=1
arch=("any")

source=("git+${url}")
sha256sums=(SKIP)


depends=(
	pacman-contrib
	systemd
)


package() {
	cp --recursive "${srcdir}/${pkgname}/root"/* "${pkgdir}"
}
